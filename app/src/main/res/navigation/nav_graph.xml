<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SecondFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="edu.ib.compsciia.FirstFragment"
        android:label="@string/fragment_add_life_form"
        tools:layout="@layout/fragment_add_life_form"/>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="edu.ib.compsciia.CalendarFragment"
        android:label="@string/fragment_calendar"
        tools:layout="@layout/fragment_calendar">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
        <action
            android:id="@+id/btnAddSchedule_to_activityFragment"
            app:destination="@id/activityFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_schedules"
        android:name="edu.ib.compsciia.fragment_schedules"
        android:label="fragment_schedules"
        tools:layout="@layout/fragment_schedules" >
        <action
            android:id="@+id/action_fragment_schedules_to_activityFragment"
            app:destination="@id/activityFragment" />
    </fragment>
    <fragment
        android:id="@+id/activityFragment"
        android:name="edu.ib.compsciia.ActivityFragment"
        android:label="fragment_activity"
        tools:layout="@layout/fragment_activity" />
</navigation>